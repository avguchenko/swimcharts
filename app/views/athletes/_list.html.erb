<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>

<div class="span8">
<table class="pretty table table-striped table-bordered">
	<thead>
		<tr>
			<th> <i class="icon-search"></i> id</th>
			<th><%=sortable "last_name", "name"%></th>
			<th><%=sortable "gender", "gender"%></th>
			<th>swims</th>
			<th><%=sortable 'birth_date', "birth date"%></th>
	</thead>

	<tbody>
		<% for athlete in @athletes -%>
			<tr>
				<td><%=athlete.id%></td>
				<td>
					<%if athlete.nation%>
						<a href="#" rel="tooltip" title="<%=athlete.nation.name%>"><img src="images/famfamfam_flag_icons/png/<%=athlete.nation.fips_code.downcase%>.png"></a>
					<%else%>
						<%= athlete.results.first.club.nation if athlete.results and athlete.results.length>0%>
					<%end%>
					<%=link_to athlete.name, athlete%>
				</td>
				<td><%=athlete.gender%></td>
				<td><%=athlete.results.length%></td>
				<td><%=athlete.birth_date%></td>

			</tr>

		<%end%>

	</tbody>


</table>

</div>

